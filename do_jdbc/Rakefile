require 'rubygems'
require 'rake'
require 'rake/clean'

require 'pathname'
require 'lib/do_jdbc/version'

ROOT     = Pathname(__FILE__).dirname.expand_path
JRUBY    = RUBY_PLATFORM =~ /java/
IRONRUBY = defined?(RUBY_ENGINE) && RUBY_ENGINE == 'ironruby'
WINDOWS  = Gem.win_platform? || (JRUBY && ENV_JAVA['os.name'] =~ /windows/i)
SUDO     = WINDOWS ? '' : ('sudo' unless ENV['SUDOLESS'])

Dir['tasks/*.rake'].sort.each { |f| import f }

CLEAN.include(%w[ {tmp,pkg}/ **/*.{o,so,bundle,jar,log,a,gem,dSYM,obj,pdb,exp,DS_Store,rbc,db} ext-java/target ])

task :default do
  # do nothing
end

begin
  require 'jeweler'

  task :build => [ :gemspec, 'lib/do_jdbc_internal.jar' ]

  jeweler = Jeweler::Tasks.new do |gem|
    gem.name        = 'do_jdbc'
    gem.version     = DataObjects::Jdbc::VERSION
    gem.summary     = 'DataObjects JDBC support library'
    gem.description = 'Provides JDBC support for usage in DO drivers for JRuby'
    gem.platform    = 'java'
    gem.files = FileList["lib/**/*.rb", "spec/**/*.rb", "tasks/**/*.rake",
                        "MIT-LICENSE", "Rakefile", "*.{markdown,rdoc,txt,yml}", "lib/*.jar"]

    gem.add_dependency "addressable", "~>2.1"
    gem.add_dependency "data_objects", DataObjects::Jdbc::VERSION

    gem.add_development_dependency 'bacon', '~>1.1'

    gem.require_path = 'lib'
    gem.has_rdoc = false
    gem.rubyforge_project = 'dorb'
    gem.authors     = [ 'Alex Coles' ]
    gem.email       = 'alex@alexcolesportfolio.com'
  end

  $gemspec = jeweler.gemspec

  Jeweler::RubyforgeTasks.new do |rubyforge|
    rubyforge.doc_task = 'yardoc'
  end
  Jeweler::GemcutterTasks.new

rescue LoadError
  puts 'Jeweler (or a dependency) not available. Install it with: gem install jeweler'
end
